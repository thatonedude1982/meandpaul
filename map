#module for the map cards
import itertools, random
from player import Player as pl

globCounter = 0 #creating global counter to handle drawing cards and holding place in deck
trail = list(itertools.product(range(50))) #establishing trail length at 50 units
trailCards = list(itertools.product(range(56)))#establishing trail deck size at 56
trailInventory = list(itertools.product(range(6)))#establishing player hand size at 6

#populating supply list in a more automated manner
for i in range(len(trailCards)):
    if i < 8:
        trailCards[i] = "Blank Trail"
        i += 1
        continue 
    elif i < 10:
        trailCards[i] = "Fort"
        i += 1
        continue
    elif i < 12:
        trailCards[i] = "Town"
        i += 1
        continue
    elif i < 36:
        trailCards[i] = "Trail Calamity"
        i += 1
        continue
    elif i < 53:
        trailCards[i] = "Ford River"
        i += 1
        continue
    else:
        trailCards[i] = "Ford River--Danger"
        i += 1
        continue
    
#shuffle
#function can be imported from deckManager also, but I put it
#here as well just for testing
def randomize():
    random.shuffle(trailCards)

def initTrailDraw(): #Same function as initDraw for supply cards reworked for trail
    print("You got: ")
    global globCounter
    for i in range (0,5):
        while globCounter < 55: #handles iterating through entire deck while making it "end of deck aware"
            trailInventory.append(trailCards[globCounter])
            print(trailCards[globCounter])
            globCounter += 1
            #code to iterate loop to next player
            break
        else: # if out of cards, reshuffle and start at the top.
            randomize()
            globCounter = 0
        
def trailDraw():
    global globCounter
    print("You got: ")
    for i in range(1): #almost the same as the initDraw function, but one card at a time.
        while globCounter < 55:
            trailInventory.append(trailCards[globCounter])
            print(trailCards[globCounter])
            globCounter += 1
            break
        else:
            randomize()
            globcounter = 0
        
randomize()                    

initTrailDraw()

trailDraw()









