import kivy
kivy.require('1.9.0')

import Die as dice
from player import Player as pl



def gameStart():

    print("Welcome to the Dysentery Trail")
    numberPlayers = input("How many travelers are making the journey? ")
    players = {}

    i = 1
    while i <= int(numberPlayers):
        name = input("Enter player {}'s name: ".format(i))
        players[i-1] = pl(name, i)
        i+=1


    for item in players:  
        print(players[item][name])

gameStart()

